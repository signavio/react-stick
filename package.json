{
  "name": "react-stick",
  "version": "0.0.0-development",
  "description": "React component to stick a portaled node to an anchor node",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "lib/*",
    "es/*"
  ],
  "repository": "git@github.com:signavio/react-stick.git",
  "author": "Jan-Felix Schwarz <jan-felix.schwarz@signavio.com>",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -p ./src/tsconfig.json --outdir ./es && tsc -p ./src/tsconfig.json --module commonJS --outdir ./lib ",
    "prepublishOnly": "npm run build",
    "build-demo": "vite --config demo/vite.config.ts build",
    "clean": "rimraf coverage es lib build",
    "lint": "eslint --max-warnings=0 --ext .ts --ext .tsx src tests demo/src",
    "prenow-build": "npm run build",
    "now-build": "npm run build-demo",
    "start": "vite --config demo/vite.config.ts",
    "semantic-release": "semantic-release",
    "semantic-release-preview": "semantic-release-github-pr",
    "test": "cypress run-ct --config-file ./tests/cypress.json",
    "test:open": "cypress open-ct --config-file ./tests/cypress.json --browser electron",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/invariant": "^2.2.35",
    "invariant": "^2.2.4",
    "requestidlecallback": "^0.3.0",
    "substyle": "^9.4.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.12",
    "@cypress/react": "^5.12.5",
    "@cypress/vite-dev-server": "^2.2.3",
    "@testing-library/cypress": "^8.0.2",
    "@types/react": "^16.14.26",
    "@types/react-dom": "^16.9.16",
    "@vitejs/plugin-react": "^1.3.2",
    "condition-circle": "2.0.2",
    "core-js": "3.22.7",
    "eslint": "8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "glamor": "2.20.40",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "2.6.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.2",
    "substyle-glamor": "4.1.2",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-istanbul": "^2.7.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "browserslist": [
    "chrome >= 50",
    "firefox >= 52",
    "safari >= 10",
    "ie >= 11"
  ],
  "release": {
    "branch": "master",
    "branches": [
      "master"
    ],
    "verifyConditions": "condition-circle"
  },
  "engines": {
    "node": ">=16.11",
    "npm": ">=8.x"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --max-warnings 0 --fix"
    ],
    "*.{json,md,yaml,yml}": "prettier --write"
  }
}
